<config>
	<append xpath="/blocks">
		<block name="IDCConfigBlock">
			<property name="Extends" value="terrDesertGround"/>
		
			<property name="IndividualizedPlayerLevels" value="false"/>
			
			<property class="ZombieSpawningSettings">
				<property name="GamestagedScouts" value="false"/>
				<property name="GamestagedBiomeSpawns" value="false"/>
				<property name="GameStagedBiomeSpawnsMinDifficulty" value="0"/>
				<property name="PreventZombiesInLandclaims" value="true"/>
			</property>

			<property class="TraderIconsConfig">
				<property name="NoTraderIcons" value="false"/>
				<property name="NoTraderIconsNight" value="true"/>
			</property>
			<property class="ScreamerOptions">
				<property name="MultiScreamerEnabled" value="false"/>
				<property name="MultiScreamerChance" value="0.5"/>
				<property name="MultiScreamerBounds" value="2,4"/>
			</property>
			
			<property class="TurretOptions">
				<property name="AdditionalTurrets" value=""/>
			</property>
			
			<property class="PlantOptions">
				<property name="ZombiesTrampleCrops" value="false"/>
				<property name="AnimalsTrampleCrops" value="false"/>
				<property name="PlayersTrampleCrops" value="false"/>
				<property name="CropTrampleTag" value="cropTrample"/>
			</property>
			
			<property name="MultipleOutputRecipes" value="true"/>
			
			<property name="DebugTools" value="false"/>
			<property name="DebugLogging" value="true"/>
			<property name="LogGamestagedBiomeSpawns" value="false"/>
			<property name="LogProgressionParsing" value="false"/>
		</block>
	</append>
</config>