<config>
	<append xpath="/windows">
		<window name="windowToolsctnPassiveCollectorV2Test" width="304" height="121" panel="Right" cursor_area="true">
			<panel style="header.panel">
				<sprite style="header.icon" sprite="ui_game_symbol_wrench"/>
				<label style="header.name" text="MODIFIERS" text_key="adcXuiModifiers"/>
			</panel>
			<rect name="content" depth="0" pos="0,-46" height="75" disablefallthrough="true">
				<grid name="inventory" rows="1" cols="4" pos="3,-3" cell_width="75" cell_height="75" controller="PassiveCollectorToolGrid, IDCCoreV2" repeat_content="true" required_tools="adcMineralInfuser,adcAdvancedFilter,adcLargeCatcher,adcBigBarrel" required_tools_only="true">
					<item_stack controller="RequiredItemStack" name="0"/>
				</grid>
			</rect>
		</window>
		<window name="windowctnPassiveCollectorV2Test" width="{windowWidth}" height="378" controller="PassiveCollectorWindow, IDCCoreV2" panel="Left" anchor_side="bottomright" visible="false" cursor_area="true">
			<panel name="header" height="43" depth="0" disableautobackground="true" anchor_left="queue,0,-3" anchor_right="queue,1,0">
				<sprite depth="1" name="headerbackground" sprite="ui_game_panel_header" anchor_left="queue,0,-3" anchor_right="queue,1,0"/>
				<sprite depth="3" name="windowIcon" style="icon32px" pivot="center" pos="21,-21" sprite="ui_game_symbol_loot_sack"/>
				<label depth="2" name="lootName" pos="39,-6" width="180" height="32" text_key="xuiDewCollector" font_size="32"/>
				<rect anchor_left="queue,1,-300" anchor_right="queue,1,0" pivot="topleft" pos="0,0" controller="ContainerStandardControls" createuiwidget="true" visible="false"/>
			</panel>
			<rect name="content" pos="3,-49">
				<sprite depth="0" name="bg" color="255,255,255,1" type="sliced" sprite="menu_empty" anchor_left="queue,0,-3" anchor_bottom="queue,0,0" anchor_right="queue,1,0" anchor_top="queue,1,49" on_press="true"/>
				<grid depth="12" name="queue" rows="3" cols="3" cell_width="75" cell_height="75" repeat_content="true" controller="PassiveCollectorContainer, IDCCoreV2" required_item="drinkJarEmpty">
					<dewcollector_stack controller="DewCollectorStack" override_stack_count="1" name="0"/>
				</grid>
			</rect>
		</window>
	</append>
	<append xpath="/windows/window[@name='craftingInfoPanel']/rect[@name='contentCraftingInfo']/rect[@name='searchControls']">
		<button depth="4" name="outputsButton" style="icon30px, press" pos="108,-22" sprite="ui_game_symbol_backpack" pivot="center" tooltip_key="idcXuiOutputsLabel" sound="[paging_click]" />
	</append>
	<append xpath="/windows/window[@name='craftingInfoPanel']/rect[@name='contentCraftingInfo']">
		<rect depth="1" pos="153,-45" name="outputs" width="447" height="264" visible="{showoutputs}">
				<grid rows="6" width="447" height="231" cell_height="50" cell_width="447" controller="IDC_Core.XUiC_RecipeOutputList,IDCCoreV2" arrangement="vertical">
					<recipe_output_header name="0"/>
					<recipe_output_row name="1"/>
					<recipe_output_row name="2"/>
					<recipe_output_row name="3"/>
					<recipe_output_row name="4"/>
					<recipe_output_row name="5"/>
				</grid>
			</rect>
	</append>
	<set xpath="/windows/window[@name='craftingInfoPanel']/rect[@name='contentCraftingInfo']/rect[@name='searchControls']/button[@name='showunlocksButton']/@pos">151,-22</set>
</config>